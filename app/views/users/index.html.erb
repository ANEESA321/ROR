<p style="color: green"><%= notice %></p>
<h1>user list</h1>
<table class="table table bordered">
<thead class="table-dark">
  <tr >
    <th>FirstName</th>
    <th>LastName</th>
    <th>Dob</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.DOB %></td>
    <td><%= link_to "Show", user,class:"btn btn-secondary btn-sm" %></td>
    <td><%= link_to "edit", edit_user_path(user),class:"btn btn-secondary btn-sm" %></td>
    <td><%= link_to "Delete", user, method: :delete,class:"btn btn-secondary btn-sm" %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to "New user", new_user_path,class:"btn btn-dark" %>
<%= link_to "export as csv", users_path(format: :csv), class:"btn btn-dark" %>
<%= link_to "Export as Pdf", users_path(format: :pdf), class:"btn btn-dark" %>