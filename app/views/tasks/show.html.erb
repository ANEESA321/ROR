<p style="color: green"><%= notice %></p>
<h1>Task details</h1><br>

<%= render @task %>


<div>
<% User.where(id: @task.userid).each do |user|%>
  <%= render "users/user", :user => user %><br>
  <%= link_to "Edit this task", edit_task_path(@task),class:"btn btn-outline-dark" %>   
  <%= link_to "Back to tasks", tasks_path,class:"btn btn-outline-dark" %><br><br>

  <%end%>
</div>
